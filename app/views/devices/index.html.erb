<% @devices.each do |device| %>
  <tr>
    <td><%= device.udid %></td>
    <td><%= device.uses %></td>
    <td><%= device.premium %></td>
    <td><%= link_to 'Show', device_path(device.udid) %></td>
    <td><%= link_to 'Edit', edit_device_path(device.udid) %></td>
